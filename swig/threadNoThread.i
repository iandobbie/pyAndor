%exception {   // Deletes any previously defined handler
//SWIGDEBUG  %exception  NO-THREAD
$action
}

%typemap(throws) char * {
//SWIGDEBUG  typemap(throws) char * NO-THREAD
	PyErr_SetString(PyExc_RuntimeError, $1);
	SWIG_fail;
}
%typemap(throws) wxString {
//SWIGDEBUG  typemap(throws) wxString NO-THREAD
	PyErr_SetString(PyExc_RuntimeError, copystring($1));  //// HACK -- CHECK -- is copystring calling 'new' w/o ever delete
	SWIG_fail;
}

